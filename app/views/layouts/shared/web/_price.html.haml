.content
  %h3 Прайс-лист

  .items
    - products_items.each do |item|
      .item.well
        .row
          .span2
            = image_tag item.preview_image.url
          .span6
            %h5 #{item.title}, #{item.size}, #{item.options}

            %table.table.table-striped
              %thead
                %tr
                  %th Профиль
                  %th Кирпичный дом
                  %th Панельный дом

              %tbody
                - item.profiles.each do |profile|
                  %tr
                    %td= profile.title
                    %td= profile.brick_house_cost
                    %td= profile.panel_house_cost