!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Окна вашего дома"
    = csrf_meta_tags

    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"

    %link(href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet')
    = stylesheet_link_tag "site", :media => "all"
    %link(href="favicon.ico" rel="shortcut icon")

  %body
    .blue-bg
    = render 'layouts/shared/web/header'
    = render 'layouts/shared/web/navbar'
    - if @page && @page.slug.eql?('main')
      .container
        .row
          .span9.price
            = render 'layouts/shared/web/price'
          .span3.news
            = render 'layouts/shared/web/news'

    .container#content
      .row
        = bootstrap_flash
        = yield

    = render 'layouts/shared/web/footer_company'

    = javascript_include_tag "site"
