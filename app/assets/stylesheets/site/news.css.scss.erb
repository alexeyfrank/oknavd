@mixin border-radius($angle) {
    -webkit-border-radius: $angle;
    border-radius: $angle;
}

.news {
    /*margin-top: -35px;*/
    /*height: 200px;*/
    background-color: white;
    @include border-radius(10px);
    min-height: 200px;
    margin-bottom: 15px;
    margin-left: 14px;

    .header {
        padding-left: 10px;
        color: #690;
        border-bottom: 2px solid #690;
    }
    .news-block {
        margin: 15px;
        border-bottom: 1px dashed #ccc;

        img {
            display: block;
            /*width: 160px;*/
            height: 130px;
            margin: 0 auto 10px auto;
        }

        a {
            padding-bottom: 10px;
        }
    }
}