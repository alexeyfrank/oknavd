.navbar.custom {

  .navbar-inner {
    min-height: 114px;
    background-color: #fdfafa;
    background-image: none;
  }

  .brand {
    background: url(<%= asset_path 'logo.png' %>);
    width: 253px;
    height: 80px;
    padding: 0;
    margin: 17px 0 17px 15px;
  }

  ul {

    margin-left: 45px;

    &:first-child {
      padding-top: 40px;
    }

    /*&:last-child {*/
        /*padding-top: 10px;*/
    /*}*/

    li {
      border-right: 1px solid #777777;
      height: 30px;

      &:last-child {
        border: 0;
      }

      a {
        text-transform: uppercase;
        padding: 6px 15px;
      }
    }
  }

  .info {
      padding-top: 10px;

      .email {
          font-weight: bold;
          font-size: 14px;
          color: #cf3232;
      }

      p, a {
          font-size: 12px;
          color: #a0a0a0;
          margin: 3px;
      }

      p.phone {
          color: #cf3232;

          .code {
              font-size: 18px;
          }

          .number {
              font-size: 24px;
              font-weight: bold;
          }
      }
  }
}