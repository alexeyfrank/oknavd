@mixin border-radius($angle) {
    -webkit-border-radius: $angle;
    border-radius: $angle;
}

.price {
    background: #ace34d;
    @include border-radius(10px);
    border: 3px solid #ffffff;
    width: 864px;
    min-height: 200px;
    margin-bottom: 15px;

    h3 {
        color: #000000;
        border-bottom: 1px solid #ffffff;
    }

    .content {
        margin: 15px;
    }
}

