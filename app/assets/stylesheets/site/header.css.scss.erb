@mixin border-radius($angle) {
    -webkit-border-radius: $angle;
    border-radius: $angle;
}

.custom-header {
  height:  150px;

    .logo-btn {
        margin-top: 30px;
        display: block;
        width: 362px;
        height: 86px;
        background-image: url(<%= asset_path('logo-new.png') %>);
    }
    .banner-btn {
        margin-top: 30px;
        display: block;
        width: 362px;
        height: 86px;
        background-color: wheat;
    }

  .left-btns {
      margin-top: 30px;

      .rule {
          background: url(<%= asset_path('rule.png') %>);
          width: 88px;
          height: 113px;
          position: relative;
          z-index: 100;
      }
      .measure-btn {
          position: absolute;
          left: 42px;
          color: black;
          display: block;
          text-align: center;
          background: #ffff00;
          -webkit-border-radius: 0px 15px 15px 0px;
          border-radius: 0px 15px 15px 0px;
          width: 133px;
          height: 40px;
      }

      .consult-btn {
          margin-top:10px;
          display: block;
          background-image: url(<%= asset_path('consult-btn.gif') %>);
          width: 171px;
          height: 28px;
      }
  }

  .right {
      width: 225px;
      margin-left: -10px;
  }

  .right-text {
      margin-top: 30px;
      text-align: right;

      .fast-consult-label {
          color: #b8c5dd;
          margin-bottom: 10px;
          font-size: 16px;

      }

      .phone {
          font-size: 36px;
          color:  white;
          text-align: right;
          margin-bottom: 10px;
      }

      .feedback-call-btn {
          color: #ffffff;
          margin-bottom: 10px;
          font-size: 16px;
          border-bottom: 1px dashed;

          &:hover {
              text-decoration: none;
              border-bottom: 1px solid;
          }
      }

      .email-btn {
          color: #b8c5dd;
          margin-bottom: 10px;
          font-size: 14px;
          &:hover {
              text-decoration: none;
              border-bottom: 0;
          }
      }
  }
}